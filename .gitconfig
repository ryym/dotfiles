[push]
    default = simple
[core]
    quotepath = false
[rebase]
    autosquash = true
[gui]
    encoding = utf-8
[alias]
    alias  = !git config --global --list | grep ^alias | cut -c7-
    s      = status
    h      = help
    b      = branch
    bm     = branch -m
    bd     = branch -d
    a      = add
    aa     = add --all
    ap     = add -p
    cm     = commit
    cmm    = commit -m
    cma    = commit -a
    cmam   = commit -am
    cmf    = commit --amend -C HEAD # Fixup changes to HEAD commit
    cmaf   = commit -a --amend -C HEAD
    cmw    = commit -m WIP
    cmaw   = commit -am WIP
    amend  = commit --amend
    co     = checkout
    cob    = checkout -b
    chp    = cherry-pick
    f      = fetch
    fp     = fetch --prune
    rb     = rebase
    rbi    = rebase -i
    cont   = rebase --continue
    abort  = rebase --abort
    m      = merge
    mnf    = merge --no-ff
    rs     = reset --mixed
    rsh    = reset --hard
    st     = stash
    sts    = stash save
    stu    = stash -u
    stp    = stash pop
    gconf  = config --global
    lconf  = config --local
    gconfs = config --global --list
    lconfs = config --local --list
    ls     = ls-files
    l      = log
    re     = log --oneline -10 # show recent logs.
    sl     = log --pretty=format:'%Cred%h%Creset %C(bold blue)<%an>%Creset %s %Cgreen(%ci)%Creset' --date=local
    slx    = log -10 --pretty=format:'%Cred%h%Creset %C(bold blue)<%an>%Creset %s %Cgreen(%ci)%Creset' --date=local
    slxx   = log -20 --pretty=format:'%Cred%h%Creset %C(bold blue)<%an>%Creset %s %Cgreen(%ci)%Creset' --date=local
    slxxx  = log -30 --pretty=format:'%Cred%h%Creset %C(bold blue)<%an>%Creset %s %Cgreen(%ci)%Creset' --date=local
    slxxxx = log -40 --pretty=format:'%Cred%h%Creset %C(bold blue)<%an>%Creset %s %Cgreen(%ci)%Creset' --date=local
    tree   = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    sh     = show
    shfs   = show --pretty=format:'%Cred%h%Creset - %Cgreen%s' --name-status
    d      = diff
    dc     = diff --cached
    dfs    = diff --name-only
    dgvi   = difftool --tool=gvimdiff
[include]
    path = .gitconfig.local
