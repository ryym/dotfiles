" Vimperator config file
" http://www.vimperator.org/vimperator

" Note {{{
"   c: Enter caret mode
" }}}

" colorscheme {{{
" http://chroju89.hatenablog.jp/entry/2014/02/09/102914

hi Hint font-family: Arial; font-size: 21px; font-weight: bold; text-shadow: -1px -1px 2px black, 1px -1px 2px black, -1px 1px 2px black, 1px 1px 2px black; color: #33cccc;
hi HintElem color: gray; background-color: #a1e4e6;
hi HintActive color: black; background-color: #ff8700;

hi ErrorMsg color:white; background-color: #ec6aa1;

" }}}

" Ignore pages {{{

ignorekeys add docs.google.com

" }}}

set hintchars=ifjklastdhgurwcyz

nmap t <Nop>
noremap tl gt
noremap th gT
noremap tn :tabnew<CR>
noremap tt :tabopen<Space>

nnoremap j 3j
nnoremap k 3k
nnoremap <C-j> 8j
nnoremap <C-k> 8k
nnoremap <C-h> :help<Space>
nnoremap coh :set nohlsearch<CR>

noremap ,r :source<Space>~/.vimperatorrc<CR>

cnoremap <C-p> <Up>
cnoremap <C-n> <Down>

" Search the selected word in visual mode.
vmap <silent> <C-g> y<Esc><Esc>P

echo 'Vimperatorrc loaded.'

" vim: filetype=vim foldmethod=marker
