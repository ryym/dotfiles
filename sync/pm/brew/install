#!/usr/bin/env bash

if ! has brew; then
    echo 'Homebrew is not installed' | teelog
else
    echo 'Homebrew' | teelog
    brew update | log

    if [ ! $(brew tap | grep 'homebrew/bundle') ]; then
        brew tap homebrew/bundle | log
    fi

    brew bundle --file="$DOTPATH/sync/pm/brew/Brewfile" | log
fi
