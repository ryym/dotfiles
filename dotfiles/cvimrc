" To initialize: https://github.com/1995eaton/chromium-vim/issues/312
"   let configpath = '/path/to/your/.cvimrc'
"   set localconfig

let configpath = '~/.cvimrc'
set localconfig

map _R :source '~/.cvimrc'

map <C-o> goBack
map <C-i> goForward

map <C-d> scrollPageDown
map <C-u> scrollPageUp
map <C-f> scrollFullPageDown
map <C-b> scrollFullPageUp

unmap gR
map R reloadTabUncached

unmap x
map dd closeTab

map <C-j> 3j
map <C-k> 3k
map <C-l> 3l
map <C-h> 3h

unmap t
map th previousTab
map tl nextTab
map tn :tabnew<CR>

iunmap <C-y>
iunmap <C-p>
iunmap <C-j>
iunmap <C-k>
