{
  "permissions": {
    "allow": [
      "Read(.local/claude/**)",
      "Write(.local/claude/**)",
      "Edit(.local/claude/**)",
      "Bash(echo:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(mkdir:*)",
      "Bash(prettier:*)",
      "Bash(git status:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(tmux list-panes:*)",
      "Bash(tmux display-message:*)",
      "Bash(tmux capture-pane:*)"
    ],
    "deny": [
      "Read(//)",
      "Read(~/)",
      "Edit(//)",
      "Edit(~/)",
      "Write(//)",
      "Write(~/)"
    ]
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "_claude_hook"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "_claude_hook"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "_claude_hook"
          }
        ]
      }
    ]
  },
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": ["Working"]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.dotfiles/dotfiles/claude/statusline.sh"
  },
  "enabledPlugins": {
    "rust-analyzer-lsp@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true
  },
  "sandbox": {
    "enabled": true
  }
}
